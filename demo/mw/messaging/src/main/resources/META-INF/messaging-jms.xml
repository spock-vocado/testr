<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
            http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <!-- XA JMS Connection Factory -->
    <bean id="jmsConnectionFactory"
          class="bitronix.tm.resource.jms.PoolingConnectionFactory"
          init-method="init"
          destroy-method="close">
        <property name="className" value="bitronix.tm.resource.jms.JndiXAConnectionFactory"/>
        <property name="uniqueName" value="hornetq"/>
        <property name="minPoolSize" value="#{dalProps['jms.minPoolSize']}"/>
        <property name="maxPoolSize" value="#{dalProps['jms.maxPoolSize']}"/>
        <property name="allowLocalTransactions" value="false"/>
        <property name="user" value="#{dalProps['jms.user']}"/>
        <property name="password" value="#{dalProps['jms.password']}"/>
        <property name="driverProperties">
            <props>
                <!-- JNDI name of the XA connection factory (depends on HornetQ remote server) -->
                <prop key="name">#{dalProps['jms.jndi.name']}</prop>
            </props>
        </property>
    </bean>

</beans>