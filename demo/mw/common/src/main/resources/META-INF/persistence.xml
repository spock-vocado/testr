<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="
                http://java.sun.com/xml/ns/persistence
                http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="testrPu" transaction-type="JTA">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <class>com.github.testr.demo.dal.entity.Book</class>
        <class>com.github.testr.demo.dal.entity.Account</class>
        <class>com.github.testr.demo.dal.entity.Entry</class>
        <class>com.github.testr.demo.dal.entity.User</class>
        <class>com.github.testr.demo.dal.entity.Address</class>
        <class>com.github.testr.demo.dal.entity.EnumType</class>
        <class>com.github.testr.demo.dal.entity.EnumValue</class>
        <exclude-unlisted-classes>true</exclude-unlisted-classes>
    </persistence-unit>

</persistence>